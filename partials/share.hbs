<div class="share u-hover-wrapper">
    <button class="share-item share-facebook u-hover-item" aria-label="share facebook"
        href="https://www.facebook.com/sharer.php?u={{url absolute="true"}}" target="_blank" rel="noopener"><i
            class="icon icon-facebook"></i></button>
    <button class="share-item share-twitter u-hover-item" aria-label="share twitter"
        href="https://twitter.com/intent/tweet?url={{url absolute="true"}}&text={{encode title}}" target="_blank" rel="noopener"><i
            class="icon icon-twitter"></i></button>
    <button class="share-item share-pinterest u-hover-item" aria-label="share pintrest"
        href="https://pinterest.com/pin/create/button/?url={{url absolute="true"}}&media={{featured_image}}&description={{encode title}}"
        target="_blank" rel="noopener" data-pin-do="none"><i class="icon icon-pinterest"></i></button>
    <button class="share-item share-linkedin u-hover-item" aria-label="share linkedin"
        href="https://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}&title={{encode title}}"
        target="_blank" rel="noopener"><i class="icon icon-linkedin"></i></button>
    <button class="share-item share-reddit u-hover-item" aria-label="share reddit"
        href="https://reddit.com/submit?url={{url absolute="true"}}&title={{encode title}}" target="_blank" rel="noopener"><i
            class="icon icon-reddit"></i></button>
    <button class="share-item share-pocket u-hover-item" aria-label="share pocket" href="https://getpocket.com/edit?url={{url absolute="true"}}"
        target="_blank" rel="noopener"><i class="icon icon-pocket"></i></button>
    <button class="share-item share-telegram u-hover-item" aria-label="share telegram"
        href="https://t.me/share/url?url={{url absolute="true"}}&text={{encode title}}" target="_blank" rel="noopener"><i
            class="icon icon-telegram"></i></button>
</div>